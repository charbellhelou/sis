<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/dropcoursesadmin.css">

    <title>List of Movies</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/admin">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>
    <div class="course-list">
        <ul>
            <% if (Array.isArray(courses)) { %>
            <% courses.forEach(course => { %>
            <li>
                <button class="course-btn" onclick="drop('<%= course.studentid %>','<%= course.courseid %>')">
                    <div>
                        <h2><%= course.name %></h2>
                        <p><strong>student id:</strong> <%= course.studentid %></p>
                        <p><strong>course id:</strong> <%= course.courseid %></p>
                        <p><strong>course name:</strong> <%= course.course_name %></p>
                    </div>
                </button>
                <button class="add-to-wishlist-btn" onclick="drop('<%= course.studentid %>','<%= course.courseid %>')">drop</button>
            </li>
            <% }); %>
            <% } else { %>
            <h>No courses available</h>
            <% } %>
        </ul>
    </div>
    <script src="../scripts/coursedrop.js"></script>
</body>
</html>
